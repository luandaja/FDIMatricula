<Page x:Class="UI.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
	Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="124*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="124*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="94*"/>
            <RowDefinition Height="209*"/>
            
        </Grid.RowDefinitions>
        
        <Button Grid.Column="1" Grid.Row="1" Content="Alumnos" x:Name="MAlumnos" Margin="10" Click="MAlumnos_Click"></Button>
        <Button Grid.Column="2" Grid.Row="1" Content="Cursos" x:Name="MCuros" Margin="10" Click="MCuros_Click"></Button>
        <Button Grid.Column="3" Grid.Row="1" Content="Matricula" x:Name="MMatricula" Margin="10" Click="MMatricula_Click"></Button>


    </Grid>
</Page>
